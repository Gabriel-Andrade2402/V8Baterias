package com.apiGeneralV8.APIv8Baterias.repositorys;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.apiGeneralV8.APIv8Baterias.entities.ProductEntity;
import com.apiGeneralV8.APIv8Baterias.entities.RequestEntity;

@Repository
public interface RequestRepository extends JpaRepository<RequestEntity,Long>{
	//Consulta de igualdade padr√£o, semelhante ao EQUALS.
	@Query(value = "SELECT * FROM tb_request WHERE str_name_product = :strCodeRequest", nativeQuery=true)
	ProductEntity find(@Param("strCodeRequest") String strNameProduct);
}
